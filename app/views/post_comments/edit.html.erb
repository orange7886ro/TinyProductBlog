<div class="col-md-4 col-md-offset-4">
  <h1>修改</h1>

  <hr>
  <%= simple_form_for @comment, :url => post_comment_path  do |f| %>
      <div class="form-group">
        <%= f.input :content, input_html: { class: "form-control"} %>
      </div>
      <%= f.submit "Submit", disable_with: 'Submitting...', class: "btn btn-primary"%>
      <%= link_to("Back", post_comments_path , class: "btn btn-primary pull-right")%>
  <% end %>
</div>