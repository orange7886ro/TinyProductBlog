<div class="col-md-4 col-md-offset-4">
  <h1>新增</h1>

  <hr>
  <%= simple_form_for @tagging, :url => tag_taggings_path  do |f| %>
      <div class="form-group">
        <%= f.input :taggable_id,
                    as: :select,
                    required: true,
                    collection: Product.all,
                    input_html: { class: "form-control"} %>
      </div>
      <%= f.submit "Submit", disable_with: 'Submitting...', class: "btn btn-primary"%>
      <%= link_to("Back", tag_path(@tag) , class: "btn btn-primary pull-right")%>
  <% end %>
</div>